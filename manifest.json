{
  "name" : "豆瓣新版广播过滤器",
  "version" : "0.1",
  "description" : "可以暂时屏蔽某些用户的发言",
  "manifest_version": 2,
  "browser_action": {
      "default_icon": "doubanicon-24.png",
      "default_title": "可以暂时屏蔽某些用户的发言"
  },
  "content_scripts" : [
    {
      "matches" : [
        "http://www.douban.com/*",
        "http://api.douban.com/*"
      ],
      "js" : ["jquery-1.7.2.min.js","contentscript.js"],
      "run_at" : "document_end",
      "all_frames" : false
    }
  ],
    "permissions": [
        "tabs",	"http://www.douban.com/*","http://api.douban.com/people/*"
    ]
}
